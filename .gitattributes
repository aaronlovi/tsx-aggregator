# Auto detect text files and perform LF normalization
* text=auto

# Force CRLF line endings for Windows source files
*.cs text eol=crlf
*.csproj text eol=crlf
*.sln text eol=crlf
*.json text eol=crlf
*.xml text eol=crlf
*.props text eol=crlf
*.targets text eol=crlf
*.md text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf
*.ts text eol=crlf
*.html text eol=crlf
*.css text eol=crlf
*.scss text eol=crlf
*.js text eol=crlf

# Shell scripts should keep LF
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.ico binary
*.gif binary
*.pdf binary
